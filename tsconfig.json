{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "rootDir": "./src" ,    
    "experimentalDecorators": true, 
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,   
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "paths": { "@angular/*": ["./node_modules/@angular/*"] }
  }
}